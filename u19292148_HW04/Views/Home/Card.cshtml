@model List<u19292148_HW04.Models.Product>
@{
    ViewBag.Title = "Payment";
}

@using (Html.BeginForm("Card", "Home", FormMethod.Get))
{
    <div class="form-group">
        <label>Total due:</label>

        @foreach (var product in Model)
        {
            <label>R @product.getPrice()</label>
        }

    </div>
    <div class="form-group">
        <label>Name on card:</label>
        <input type="text" name="nameOC" class="form-control" required="required" />
    </div>
    <div class="form-group">
        <label>Card number:</label>
        <input type="text" name="CD" class="form-control" required="required" />
    </div>
    <div class="form-group">
        <label>Expiry date:</label>
        <input type="text" name="ED" class="form-control" required="required" />
    </div>
    <div class="form-group">
        <label>CVV:</label>
        <input type="text" name="CVV" class="form-control" required="required" />
    </div>
}
<div class="row">
    <a class="btn btn-primary" href="@Url.Action("Display","Home")" style="background-color: #2e5cb8">Cancel</a>
    <a class="btn btn-primary" href="@Url.Action("Invoice","Home")" style="background-color: #2e5cb8">Pay</a>

</div>


<style>
    label,p,h2{
        color:white;
    }
</style>
